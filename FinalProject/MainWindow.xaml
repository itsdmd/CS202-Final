<Window x:Class="FinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="799" Width="1033" Loaded="Window_Loaded">
	<Window.Resources>
		<local:RawToRenamedConverter x:Key="converter"/>
	</Window.Resources>
	<Canvas>
		<TextBlock Text="From"
				   FontSize="50" FontWeight="Bold" Canvas.Left="58" Canvas.Top="74"/>

		<TextBlock Text="Rules"
				   FontSize="50" FontWeight="Bold" Canvas.Left="430" Canvas.Top="74" HorizontalAlignment="Left" VerticalAlignment="Center"/>

		<TextBlock Text="To"
				   FontSize="50" FontWeight="Bold" Canvas.Left="909" Canvas.Top="79" HorizontalAlignment="Left" VerticalAlignment="Top"/>

		<ListView x:Name="filesListView"
				  Width="300" Height="500" Canvas.Left="58" Canvas.Top="146" HorizontalAlignment="Left" VerticalAlignment="Top">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding FileName}"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<Button x:Name="addFileButton" Content="Add File" Click="addFileButton_Click"
				Width="100" Height="50" Canvas.Left="58" Canvas.Top="674" HorizontalAlignment="Left" VerticalAlignment="Center"/>

		<Button x:Name="addFolderButton" Content="Add Folder" Click="addFolderButton_Click"
				Width="100" Height="50" Canvas.Left="258" Canvas.Top="674" HorizontalAlignment="Left" VerticalAlignment="Center"/>

		<Button x:Name="selectRulePresetButton" Content="Select Rule Preset File" Click="selectRulePresetButton_Click"
				Width="150" Height="30" Canvas.Left="441" Canvas.Top="146" HorizontalAlignment="Left" VerticalAlignment="Top"/>

		<TextBlock x:Name="ruleFileName" FontSize="17"
				 Width="150" Height="20" Canvas.Left="441" Canvas.Top="176" HorizontalAlignment="Center" VerticalAlignment="Top"/>

		<ListView Name="ruleSelectListView" d:ItemsSource="{d:SampleData}" SelectionChanged="ruleSelectListView_SelectionChanged"
				  Width="220" Height="120" HorizontalAlignment="Center" Canvas.Top="213" VerticalAlignment="Top" Canvas.Left="406" >
			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Vertical"/>
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding RuleName}"
							   Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<TextBox x:Name="ruleConfig" TextChanged="ruleConfig_TextChanged"
				 Width="220" Canvas.Left="406" Canvas.Top="338" Height="41" HorizontalAlignment="Center" VerticalAlignment="Top"/>

		<Button x:Name="addRuleButton" Content="Add" Click="addRuleButton_Click"
				Width="100" Height="24" Canvas.Left="466" Canvas.Top="384" HorizontalAlignment="Center" VerticalAlignment="Top"/>

		<ListView Name="rulePreviewListView" d:ItemsSource="{d:SampleData}" SelectionChanged="rulePreviewListView_SelectionChanged"
				  Width="220" Height="186" HorizontalAlignment="Center" Canvas.Top="430" VerticalAlignment="Top" Canvas.Left="406" >
			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Vertical"/>
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>
			<ListView.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding RuleName}"/>
						<TextBlock Text=" - [ "/>
						<TextBlock Text="{Binding RuleConfig}"/>
						<TextBlock Text=" ]"/>
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<Button x:Name="deleteRuleButton" Content="Delete" Click="deleteRuleButton_Click"
				Width="100" Height="25" Canvas.Left="466" Canvas.Top="621" HorizontalAlignment="Center" VerticalAlignment="Top"/>

		<ListView x:Name="previewListView"
				  Width="300" Height="500"
				  HorizontalAlignment="Center" Canvas.Left="664" VerticalAlignment="Center" Canvas.Top="146">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding FileName, Converter={StaticResource converter}}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<CheckBox x:Name="moveToSubDirCheckBox" Content="Move to a Sub Folder?"
				  Canvas.Left="664" Canvas.Top="669" HorizontalAlignment="Center" VerticalAlignment="Top"/>

		<Button x:Name="selectSubFolderButton" Content="Select Sub Folder" Click="selectSubFolderButton_Click"
				Width="100" Height="25" Canvas.Left="664" Canvas.Top="689" HorizontalAlignment="Center" VerticalAlignment="Top"/>

		<Button x:Name="renameButton" Content="Rename" Click="renameButton_Click"
				Width="100" Height="50" Canvas.Left="864" Canvas.Top="669" HorizontalAlignment="Left" VerticalAlignment="Center"/>
	</Canvas>
</Window>
